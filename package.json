{
  "name": "ecoloader",
  "description": "Reduces energy usage during webpage loading.",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "watch": "webpack --mode=development --watch --config config/webpack.config.cjs",
    "web-ext": "cd build && web-ext run",
    "build": "webpack --mode=production --config config/webpack.config.cjs",
    "pack": "npm run build && node pack.cjs",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check --ignore-unknown '{config,public,src}/**/*.{html,css,ts,js,cjs,json}' './*.{js,cjs,json}'",
    "format:fix": "prettier --write --ignore-unknown '{config,public,src}/**/*.{html,css,ts,js,cjs,json}' './*.{js,cjs,json}'",
    "fix": "npm run lint:fix && npm run format:fix"
  },
  "devDependencies": {
    "@tgwf/co2": "^0.13.9",
    "@types/chrome": "^0.0.254",
    "@types/firefox-webext-browser": "^120.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "adm-zip": "^0.5.10",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.1",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.1.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "web-ext": "^7.9.0",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  }
}
